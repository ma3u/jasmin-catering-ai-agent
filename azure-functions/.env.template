# Azure Functions Environment Variables Template
# Copy this to .env and fill in your values

# Gmail OAuth Configuration
# Get these from Google Cloud Console
GMAIL_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=GOCSPX-YOUR_GOOGLE_CLIENT_SECRET
# Get this from OAuth Playground after authorizing
GMAIL_REFRESH_TOKEN=your-refresh-token-here
# The Gmail account to monitor
GMAIL_USER_EMAIL=mabu.mate@gmail.com

# Slack Configuration
# Get this from https://api.slack.com/apps after creating your app
# Should start with xoxb-
SLACK_TOKEN=xoxb-your-slack-bot-token
# The channel to post messages to (without #)
SLACK_CHANNEL=gmail-inbox

# Optional: Azure Storage for state management
# Get from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=

# Function Runtime Settings (don't change these)
FUNCTIONS_WORKER_RUNTIME=node
WEBSITE_NODE_DEFAULT_VERSION=~20